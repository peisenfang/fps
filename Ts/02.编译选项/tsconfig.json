{
  // 选择编译的文件
  "include":[
    "./src/**/*"
  ],
  // 选择不编译的文件
  "exclude": [
    ""
  ],
  "compilerOptions": {
    "strict": false, //所有严格检查的开关
    "target": "es2016", //ts被编译的es版本
    "module": "commonjs", //模块化标准
    "outDir": "./dist",  //编译后的js文件位置
    //"outFile": "./dist/app.js"  //合并js文件
    "allowJs": false, //是否编译js
    "checkJs": false, //是否检查js规范
    "removeComments": false, //是否移除注释
    "noEmit": false, //不生成编译文件
    "noEmitOnError": false, //有错误时不生成编译的文件
    "alwaysStrict": true, //编译后文件使用严格模式
    "noImplicitAny": false, //不允许隐式any
    "noImplicitThis": false, //不允许不明类型this
    "strictNullChecks": false, //严格检查null
  }
}
